<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.springbootapplication.repository.UserInfoMapper">

    <!-- 全件検索 -->
    <select id="findAll" resultType="com.spring.springbootapplication.entity.UserInfo">
        SELECT * FROM users 
    </select>

    <!-- 主キー検索 -->
    <select id="findById" resultType="com.spring.springbootapplication.entity.UserInfo">
        SELECT * FROM users WHERE id=#{id} 
    </select>

    <!-- 条件指定検索 -->
    <select id="search" resultType="com.spring.springbootapplication.entity.UserInfo">
        SELECT
            *
        FROM
            users
        WHERE
            <if test="id != null and id != ''">
                AND id = #{id}
            </if>
            <if test="name != null and name != ''">
                AND name LIKE CONCAT('%', #{name}, '%')
            </if>
    </select>

    <!-- 新規登録 -->
    <insert id="save">
        INSERT INTO users
            (name, email, password_digest, updated_at, created_at)
        VALUES
            (#{name}, #{email}, #{passwordDigest}, CURRENT_TIMESTAMP,  CURRENT_TIMESTAMP)
    </insert>

    <!-- 更新 
    <update id="update">
        UPDATE users SET name = #{name}, email = #{email}, 
        <if test="passwordDigest != null and passwordDigest != ''">
            password_digest = #{passwordDigest},
        </if>#{image}, #{profileDetail}, updated_at = CURRENT_TIMESTAMP WHERE id = #{id}
    </update>-->

</mapper>